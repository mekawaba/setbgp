<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{/dev1}</name>
      <config>
        <router xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <bgp>
            <bgp-no-instance>
              <id>{/as}</id>
              <bgp>
                <router-id>{/dev1-loop}</router-id>
                <update-delay>
                  <update-delay-value>0</update-delay-value>
                </update-delay>
              </bgp>
              <address-family>
                <ipv4>
                  <unicast>
                    <redistribute>
                      <connected/>
                    </redistribute>
                  </unicast>
                </ipv4>
              </address-family>
              <neighbor>
                <id>{/dev2-loop}</id>
                <remote-as>{/as}</remote-as>
                <update-source>
                  <Loopback>0</Loopback>
                </update-source>
                <address-family>
                  <ipv4>
                    <unicast/>
                  </ipv4>
                </address-family>
              </neighbor>
            </bgp-no-instance>
          </bgp>
        </router>
      </config>
    </device>
    <device>
    <name>{/dev2}</name>
    <config>
      <router xmlns="http://tail-f.com/ned/cisco-ios-xr">
        <bgp>
          <bgp-no-instance>
            <id>{/as}</id>
            <bgp>
              <router-id>{dev2-loop}</router-id>
              <update-delay>
                <update-delay-value>0</update-delay-value>
              </update-delay>
            </bgp>
            <address-family>
              <ipv4>
                <unicast>
                  <redistribute>
                    <connected/>
                  </redistribute>
                </unicast>
              </ipv4>
            </address-family>
            <neighbor>
              <id>{/dev1-loop}</id>
              <remote-as>{/as}</remote-as>
              <update-source>
                <Loopback>0</Loopback>
              </update-source>
              <address-family>
                <ipv4>
                  <unicast/>
                </ipv4>
              </address-family>
            </neighbor>
          </bgp-no-instance>
        </bgp>
      </router>
    </config>
  </device>
  </devices>
</config-template>
